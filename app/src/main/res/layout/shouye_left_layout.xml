<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/img"
            android:scaleType="centerInside"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/sex_img"
            android:layout_marginLeft="80dp"
            android:layout_height="20dp" />
        <com.qf.damobobo.views.MyTextView
            android:id="@+id/tv_top"
            android:layout_width="50dp"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:focusable="true"
            android:layout_toRightOf="@id/sex_img"
            android:textSize="18sp"
            android:textColor="#3263a3"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/tv_msg"
        android:textColor="#4b4845"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_height="match_parent">

        </GridView>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_talk"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@id/img1"
                android:id="@+id/tv_talk"
                android:layout_width="40dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img2"
                android:layout_toRightOf="@id/tv_talk"
                android:layout_width="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_heart"
                android:layout_height="30dp" />
            <TextView
                android:layout_toRightOf="@id/img2"
                android:id="@+id/tv_heart"
                android:layout_width="40dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_share"
                android:layout_height="30dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>