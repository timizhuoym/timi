<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/jiemianBJ"
    tools:context="com.qf.damobobo.GerenzhongxinActivity">
    <RelativeLayout
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <ImageButton
            android:layout_width="50dp"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back"
            android:onClick="myClick"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:text="@string/geregzhongxin"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <ImageView
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:scaleType="centerInside"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:text="@string/zhanghao"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_zhanghao"
                android:textColor="#898989"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv1"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#E3E3E3"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:clickable="true"
            android:id="@+id/re_nicheng"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:text="@string/nicheng"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_nicheng"
                android:textColor="#898989"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv2"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:background="@null"
                android:src="@drawable/fai"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#E3E3E3"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:clickable="true"
            android:id="@+id/re_sex"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:text="@string/sex"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img"
                android:layout_toRightOf="@id/tv3"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_sex"
                android:textColor="#898989"

                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img"

                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:background="@null"
                android:src="@drawable/fai"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#E3E3E3"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:clickable="true"
            android:id="@+id/re_youxiang"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:text="@string/youxiang"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_youxiang"
                android:textColor="#898989"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv4"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:background="@null"
                android:src="@drawable/fai"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#E3E3E3"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:clickable="true"
            android:id="@+id/re_shengri"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:text="@string/shengri"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_shengri"
                android:textColor="#898989"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv5"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:background="@null"
                android:src="@drawable/fai"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#E3E3E3"
            android:layout_height="0.5dp" />

        </LinearLayout>
    <Button
        android:background="@drawable/title_bg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#fff"
        android:text="@string/xiugaimima"
        android:onClick="xiuGai"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
